<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ai.bookkeeping.ui.HomeFragment"
        android:label="首页"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_add"
            app:destination="@id/addTransactionFragment" />
        <action
            android:id="@+id/action_home_to_photo"
            app:destination="@id/photoRecordFragment" />
        <action
            android:id="@+id/action_home_to_voice"
            app:destination="@id/voiceRecordFragment" />
        <action
            android:id="@+id/action_home_to_category"
            app:destination="@id/categoryManageFragment" />
        <action
            android:id="@+id/action_home_to_account"
            app:destination="@id/accountManageFragment" />
        <action
            android:id="@+id/action_home_to_budget"
            app:destination="@id/budgetFragment" />
        <action
            android:id="@+id/action_home_to_notebook"
            app:destination="@id/notebookManageFragment" />
        <action
            android:id="@+id/action_home_to_import"
            app:destination="@id/importBillFragment" />
    </fragment>

    <fragment
        android:id="@+id/recordsFragment"
        android:name="com.ai.bookkeeping.ui.RecordsFragment"
        android:label="记录"
        tools:layout="@layout/fragment_records" />

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.ai.bookkeeping.ui.StatisticsFragment"
        android:label="统计"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.ai.bookkeeping.ui.AddTransactionFragment"
        android:label="手动记账"
        tools:layout="@layout/fragment_add_transaction" />

    <fragment
        android:id="@+id/photoRecordFragment"
        android:name="com.ai.bookkeeping.ui.PhotoRecordFragment"
        android:label="拍照记账"
        tools:layout="@layout/fragment_photo_record" />

    <fragment
        android:id="@+id/voiceRecordFragment"
        android:name="com.ai.bookkeeping.ui.VoiceRecordFragment"
        android:label="语音记账"
        tools:layout="@layout/fragment_voice_record" />

    <fragment
        android:id="@+id/categoryManageFragment"
        android:name="com.ai.bookkeeping.ui.CategoryManageFragment"
        android:label="分类管理"
        tools:layout="@layout/fragment_category_manage" />

    <!-- 新增页面 -->
    <fragment
        android:id="@+id/accountManageFragment"
        android:name="com.ai.bookkeeping.ui.account.AccountManageFragment"
        android:label="账户管理"
        tools:layout="@layout/fragment_account_manage" />

    <fragment
        android:id="@+id/budgetFragment"
        android:name="com.ai.bookkeeping.ui.budget.BudgetFragment"
        android:label="预算管理"
        tools:layout="@layout/fragment_budget" />

    <fragment
        android:id="@+id/notebookManageFragment"
        android:name="com.ai.bookkeeping.ui.notebook.NotebookManageFragment"
        android:label="账本管理"
        tools:layout="@layout/fragment_notebook_manage" />

    <fragment
        android:id="@+id/importBillFragment"
        android:name="com.ai.bookkeeping.ui.import.ImportBillFragment"
        android:label="账单导入"
        tools:layout="@layout/fragment_import_bill" />

</navigation>
