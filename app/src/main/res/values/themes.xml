<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 主题 - iOS 风格 -->
    <style name="Theme.AIBookkeeping" parent="Theme.Material3.Light.NoActionBar">
        <!-- 主色调 - iOS 系统蓝 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <!-- 次要色调 -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- 强调色 -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorTertiary">@color/accent</item>

        <!-- 背景和表面 - iOS 系统灰6 -->
        <item name="android:colorBackground">@color/background_grouped</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- 轮廓和分割线 -->
        <item name="colorOutline">@color/separator_opaque</item>
        <item name="colorOutlineVariant">@color/divider_light</item>

        <!-- 错误颜色 -->
        <item name="colorError">@color/ios_red</item>

        <!-- 状态栏 - iOS 风格 -->
        <item name="android:statusBarColor">@color/background_grouped</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <!-- 导航栏 - iOS Tab Bar 风格 -->
        <item name="android:navigationBarColor">@color/tab_bar_bg</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- 波纹效果 -->
        <item name="colorControlHighlight">@color/ripple_light</item>

        <!-- iOS 风格组件样式 -->
        <item name="materialButtonStyle">@style/Widget.iOS.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.iOS.Button.Outlined</item>
        <item name="materialCardViewStyle">@style/Widget.iOS.CardView</item>
        <item name="textInputStyle">@style/Widget.iOS.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.iOS.BottomNavigation</item>
        <item name="chipStyle">@style/Widget.iOS.Chip</item>
    </style>

    <!-- ==================== iOS 基础样式 ==================== -->

    <style name="Widget.iOS" parent="" />

    <!-- ==================== iOS 风格按钮 ==================== -->

    <style name="Widget.iOS.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/ios_blue</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.iOS.Button.Outlined" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/ios_blue</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">17sp</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="Widget.iOS.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/ios_blue</item>
        <item name="android:textSize">17sp</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="Widget.iOS.Button.Destructive" parent="Widget.iOS.Button">
        <item name="backgroundTint">@color/ios_red</item>
    </style>

    <style name="Widget.iOS.Button.Large" parent="Widget.iOS.Button">
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">17sp</item>
        <item name="cornerRadius">14dp</item>
    </style>

    <!-- FAB 样式 - iOS 风格 -->
    <style name="Widget.iOS.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/ios_blue</item>
        <item name="tint">@color/white</item>
        <item name="elevation">2dp</item>
        <item name="fabCustomSize">56dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.iOS.FAB</item>
    </style>

    <style name="ShapeAppearance.iOS.FAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- ==================== iOS 风格卡片 ==================== -->

    <style name="Widget.iOS.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="Widget.iOS.CardView.Grouped" parent="Widget.iOS.CardView">
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="Widget.iOS.CardView.Inset" parent="Widget.iOS.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <!-- ==================== iOS 风格输入框 ==================== -->

    <style name="Widget.iOS.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/system_gray6</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/system_gray</item>
    </style>

    <style name="Widget.iOS.TextInputLayout.Search" parent="Widget.iOS.TextInputLayout">
        <item name="boxBackgroundColor">@color/system_gray5</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <!-- ==================== iOS Tab Bar 样式 ==================== -->

    <style name="Widget.iOS.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/tab_bar_bg</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">0dp</item>
        <item name="android:minHeight">49dp</item>
    </style>

    <!-- ==================== iOS Segmented Control / Chip 样式 ==================== -->

    <style name="Widget.iOS.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Widget.iOS.Chip.Segment" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipBackgroundColor">@color/chip_bg_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- ==================== iOS 文字样式 ==================== -->

    <!-- 基础文字样式 -->
    <style name="TextAppearance.AIBookkeeping" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- iOS Large Title -->
    <style name="TextAppearance.iOS.LargeTitle" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- iOS Title 1 -->
    <style name="TextAppearance.iOS.Title1" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- iOS Title 2 -->
    <style name="TextAppearance.iOS.Title2" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- iOS Title 3 -->
    <style name="TextAppearance.iOS.Title3" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- iOS Headline -->
    <style name="TextAppearance.iOS.Headline" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- iOS Body -->
    <style name="TextAppearance.iOS.Body" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- iOS Callout -->
    <style name="TextAppearance.iOS.Callout" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- iOS Subhead -->
    <style name="TextAppearance.iOS.Subhead" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- iOS Footnote -->
    <style name="TextAppearance.iOS.Footnote" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- iOS Caption 1 -->
    <style name="TextAppearance.iOS.Caption1" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- iOS Caption 2 -->
    <style name="TextAppearance.iOS.Caption2" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- 金额显示样式 -->
    <style name="TextAppearance.AIBookkeeping.Amount" parent="TextAppearance.AIBookkeeping">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Amount.Large" parent="TextAppearance.AIBookkeeping.Amount">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Amount.Medium" parent="TextAppearance.AIBookkeeping.Amount">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Amount.Small" parent="TextAppearance.AIBookkeeping.Amount">
        <item name="android:textSize">17sp</item>
    </style>

    <!-- 兼容旧样式 -->
    <style name="TextAppearance.AIBookkeeping.Headline1" parent="TextAppearance.iOS.LargeTitle" />
    <style name="TextAppearance.AIBookkeeping.Headline2" parent="TextAppearance.iOS.Title1" />
    <style name="TextAppearance.AIBookkeeping.Headline3" parent="TextAppearance.iOS.Title2" />
    <style name="TextAppearance.AIBookkeeping.Title" parent="TextAppearance.iOS.Headline" />
    <style name="TextAppearance.AIBookkeeping.Subtitle" parent="TextAppearance.iOS.Callout" />
    <style name="TextAppearance.AIBookkeeping.Body" parent="TextAppearance.iOS.Body" />
    <style name="TextAppearance.AIBookkeeping.Caption" parent="TextAppearance.iOS.Footnote" />
    <style name="TextAppearance.AIBookkeeping.Label" parent="TextAppearance.iOS.Caption2" />

    <!-- ==================== iOS 对话框样式 ==================== -->

    <style name="Theme.AIBookkeeping.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorAccent">@color/ios_blue</item>
        <item name="dialogCornerRadius">14dp</item>
        <item name="android:windowBackground">@drawable/bg_dialog_ios</item>
    </style>

    <style name="Theme.AIBookkeeping.BottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="bottomSheetStyle">@style/Widget.iOS.BottomSheet</item>
    </style>

    <style name="Widget.iOS.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.iOS.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.iOS.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
    </style>

    <!-- ==================== iOS Tab 样式 ==================== -->

    <style name="Widget.iOS.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/ios_blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/ios_blue</item>
        <item name="tabTextColor">@color/system_gray</item>
        <item name="tabRippleColor">@color/ripple_light</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- ==================== iOS 进度条样式 ==================== -->

    <style name="Widget.iOS.ProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/ios_blue</item>
        <item name="trackColor">@color/system_gray5</item>
    </style>

    <style name="Widget.iOS.LinearProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/ios_blue</item>
        <item name="trackColor">@color/system_gray5</item>
        <item name="trackCornerRadius">2dp</item>
    </style>

    <!-- iOS 列表项样式 -->
    <style name="Widget.iOS.ListItem">
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- ==================== 兼容旧样式名称 ==================== -->
    <style name="Widget.Glass.Button" parent="Widget.iOS.Button" />
    <style name="Widget.Glass.Button.Outlined" parent="Widget.iOS.Button.Outlined" />
    <style name="Widget.Glass.Button.Text" parent="Widget.iOS.Button.Text" />
    <style name="Widget.Glass.CardView" parent="Widget.iOS.CardView" />
    <style name="Widget.Glass.CardView.Solid" parent="Widget.iOS.CardView" />
    <style name="Widget.Glass.TextInputLayout" parent="Widget.iOS.TextInputLayout" />
    <style name="Widget.Glass.BottomNavigation" parent="Widget.iOS.BottomNavigation" />
    <style name="Widget.Glass.Chip" parent="Widget.iOS.Chip" />
    <style name="Widget.Glass.Chip.Choice" parent="Widget.iOS.Chip.Segment" />
    <style name="Widget.Glass.FAB" parent="Widget.iOS.FAB" />
    <style name="Widget.Glass.BottomSheet" parent="Widget.iOS.BottomSheet" />
    <style name="Widget.Glass.TabLayout" parent="Widget.iOS.TabLayout" />
    <style name="Widget.Glass.ProgressBar" parent="Widget.iOS.ProgressBar" />
    <style name="Widget.Glass.LinearProgressBar" parent="Widget.iOS.LinearProgressBar" />

    <style name="Widget.AIBookkeeping.Button" parent="Widget.iOS.Button" />
    <style name="Widget.AIBookkeeping.Button.Outlined" parent="Widget.iOS.Button.Outlined" />
    <style name="Widget.AIBookkeeping.Button.Text" parent="Widget.iOS.Button.Text" />
    <style name="Widget.AIBookkeeping.CardView" parent="Widget.iOS.CardView" />
    <style name="Widget.AIBookkeeping.TextInputLayout" parent="Widget.iOS.TextInputLayout" />
    <style name="Widget.AIBookkeeping.BottomNavigation" parent="Widget.iOS.BottomNavigation" />
    <style name="Widget.AIBookkeeping.Chip" parent="Widget.iOS.Chip" />
    <style name="Widget.AIBookkeeping.Chip.Choice" parent="Widget.iOS.Chip.Segment" />
    <style name="Widget.AIBookkeeping.FAB" parent="Widget.iOS.FAB" />

</resources>
