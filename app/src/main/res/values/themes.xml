<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 主题 - Material Design 3 增强 -->
    <style name="Theme.AIBookkeeping" parent="Theme.Material3.Light.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <!-- 次要色调 -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- 强调色 -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorTertiary">@color/accent</item>

        <!-- 背景和表面 -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- 轮廓和分割线 -->
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>

        <!-- 错误颜色 -->
        <item name="colorError">@color/error</item>

        <!-- 状态栏 -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- 导航栏 -->
        <item name="android:navigationBarColor">@color/background_white</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- 波纹效果 -->
        <item name="colorControlHighlight">@color/ripple_light</item>

        <!-- 按钮样式 -->
        <item name="materialButtonStyle">@style/Widget.AIBookkeeping.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.AIBookkeeping.Button.Outlined</item>

        <!-- 卡片样式 -->
        <item name="materialCardViewStyle">@style/Widget.AIBookkeeping.CardView</item>

        <!-- 文本输入框样式 -->
        <item name="textInputStyle">@style/Widget.AIBookkeeping.TextInputLayout</item>

        <!-- 底部导航样式 -->
        <item name="bottomNavigationStyle">@style/Widget.AIBookkeeping.BottomNavigation</item>

        <!-- Chip样式 -->
        <item name="chipStyle">@style/Widget.AIBookkeeping.Chip</item>
    </style>

    <!-- ==================== 按钮样式 ==================== -->

    <style name="Widget.AIBookkeeping.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="Widget.AIBookkeeping.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="Widget.AIBookkeeping.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="Widget.AIBookkeeping.Button.Large" parent="Widget.AIBookkeeping.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!-- FAB 样式 -->
    <style name="Widget.AIBookkeeping.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="elevation">8dp</item>
        <item name="fabCustomSize">64dp</item>
    </style>

    <style name="Widget.AIBookkeeping.FAB.Small" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="elevation">6dp</item>
        <item name="fabCustomSize">48dp</item>
    </style>

    <!-- ==================== 卡片样式 ==================== -->

    <style name="Widget.AIBookkeeping.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.AIBookkeeping.CardView.Elevated" parent="Widget.AIBookkeeping.CardView">
        <item name="cardElevation">6dp</item>
    </style>

    <style name="Widget.AIBookkeeping.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- ==================== 文本输入框样式 ==================== -->

    <style name="Widget.AIBookkeeping.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/surface_variant</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <style name="Widget.AIBookkeeping.TextInputLayout.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <!-- ==================== 底部导航样式 ==================== -->

    <style name="Widget.AIBookkeeping.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/bottom_nav_bg</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.AIBookkeeping.BottomNavigation.ActiveIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">8dp</item>
        <item name="android:minHeight">64dp</item>
    </style>

    <style name="Widget.AIBookkeeping.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_nav_indicator</item>
    </style>

    <!-- ==================== Chip 样式 ==================== -->

    <style name="Widget.AIBookkeeping.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="Widget.AIBookkeeping.Chip.Choice" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipBackgroundColor">@color/chip_bg_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- ==================== 文字样式 ==================== -->

    <!-- 基础文字样式 -->
    <style name="TextAppearance.AIBookkeeping" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Headline1" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Headline2" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Headline3" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Title" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Subtitle" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Body" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Caption" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Label" parent="TextAppearance.AIBookkeeping">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <!-- 金额显示样式 -->
    <style name="TextAppearance.AIBookkeeping.Amount" parent="TextAppearance.AIBookkeeping">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Amount.Large" parent="TextAppearance.AIBookkeeping.Amount">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Amount.Medium" parent="TextAppearance.AIBookkeeping.Amount">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.AIBookkeeping.Amount.Small" parent="TextAppearance.AIBookkeeping.Amount">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ==================== 对话框样式 ==================== -->

    <style name="Theme.AIBookkeeping.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="dialogCornerRadius">24dp</item>
        <item name="android:windowBackground">@drawable/bg_dialog_rounded</item>
    </style>

    <style name="Theme.AIBookkeeping.BottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="bottomSheetStyle">@style/Widget.AIBookkeeping.BottomSheet</item>
    </style>

    <style name="Widget.AIBookkeeping.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.AIBookkeeping.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.AIBookkeeping.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <!-- ==================== Tab 样式 ==================== -->

    <style name="Widget.AIBookkeeping.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabRippleColor">@color/ripple_light</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <!-- ==================== 进度条样式 ==================== -->

    <style name="Widget.AIBookkeeping.ProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/surface_variant</item>
    </style>

    <style name="Widget.AIBookkeeping.LinearProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/surface_variant</item>
        <item name="trackCornerRadius">4dp</item>
    </style>

</resources>
