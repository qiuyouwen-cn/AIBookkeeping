<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ai.bookkeeping.ui.HomeFragment"
        android:label="首页"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_add"
            app:destination="@id/addTransactionFragment" />
        <action
            android:id="@+id/action_home_to_photo"
            app:destination="@id/photoRecordFragment" />
        <action
            android:id="@+id/action_home_to_voice"
            app:destination="@id/voiceRecordFragment" />
        <action
            android:id="@+id/action_home_to_category"
            app:destination="@id/categoryManageFragment" />
    </fragment>

    <fragment
        android:id="@+id/recordsFragment"
        android:name="com.ai.bookkeeping.ui.RecordsFragment"
        android:label="记录"
        tools:layout="@layout/fragment_records" />

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.ai.bookkeeping.ui.StatisticsFragment"
        android:label="统计"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.ai.bookkeeping.ui.AddTransactionFragment"
        android:label="手动记账"
        tools:layout="@layout/fragment_add_transaction" />

    <fragment
        android:id="@+id/photoRecordFragment"
        android:name="com.ai.bookkeeping.ui.PhotoRecordFragment"
        android:label="拍照记账"
        tools:layout="@layout/fragment_photo_record" />

    <fragment
        android:id="@+id/voiceRecordFragment"
        android:name="com.ai.bookkeeping.ui.VoiceRecordFragment"
        android:label="语音记账"
        tools:layout="@layout/fragment_voice_record" />

    <fragment
        android:id="@+id/categoryManageFragment"
        android:name="com.ai.bookkeeping.ui.CategoryManageFragment"
        android:label="分类管理"
        tools:layout="@layout/fragment_category_manage" />

</navigation>
